# server/.env  (LOCAL DEV)
NODE_ENV=development
PORT=5000

# MUST include a database name (not just the host)
MONGODB_URI=mongodb://127.0.0.1:27017/pg_life

# Long random string (no quotes)
JWT_SECRET=put-a-long-random-string-here
JWT_EXPIRES_IN=7d

# Allow your local client
CORS_ORIGIN=http://localhost:5173

# Optional: enables the /api/listings/__seed endpoint (turn off later)
ALLOW_SEED=true
